<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/common_background"
    android:fitsSystemWindows="true"
    android:orientation="vertical"

    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/title_height"
        android:background="@color/theme_color_primary_trans">

        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="10dp"
            android:layout_height="17dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:src="@drawable/left_back_"
            />

        <TextView
            android:id="@+id/tv_base_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:maxLength="13"
            android:singleLine="true"
            android:text="订阅管理"
            android:textColor="@color/common_text_color"
            android:textSize="@dimen/title_size"/>

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/line"/>

    <android.support.design.widget.TabLayout
        android:id="@+id/tabs"
        android:layout_width="match_parent"
        android:layout_height="53dp"
        android:background="@color/theme_color_primary_trans"
        android:fillViewport="false"
        app:tabGravity="fill"
        app:tabIndicatorColor="@color/green_text_color"
        app:tabIndicatorHeight="1.5dp"
        app:tabMode="fixed"
        app:tabSelectedTextColor="@color/tab_text_selected"
        app:tabTextAppearance="@style/GreenTabTextAppearance"
        app:tabTextColor="@color/tab_text_unselected"/>

    <android.support.v4.view.ViewPager
        android:id="@+id/mViewPager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/info_background"/>

</LinearLayout>