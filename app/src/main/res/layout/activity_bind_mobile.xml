<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/login_bg"
    android:orientation="vertical">
    <!--标题-->
    <include layout="@layout/activity_base_login" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv_img"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_marginTop="43dp"
                android:scaleType="centerCrop"
                android:src="@drawable/login_head" />

            <EditText
                android:id="@+id/et_mobile"
                android:layout_width="227dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp"
                android:background="@null"
                android:gravity="center"
                android:hint="请输入手机号"
                android:inputType="number"
                android:maxLength="11"
                android:text=""
                android:textColor="@color/title_text_login"
                android:textColorHint="@color/login_text_hint"
                android:textSize="15sp" />

            <View
                android:layout_width="227dp"
                android:layout_height="1dp"
                android:layout_marginTop="9dp"
                android:background="@color/login_text_hint" />

            <EditText
                android:id="@+id/et_password"
                android:layout_width="227dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp"
                android:background="@null"
                android:gravity="center"
                android:hint="请输入密码"
                android:inputType="numberPassword"
                android:text=""
                android:textColor="@color/title_text_login"
                android:textColorHint="@color/login_text_hint"
                android:textSize="15sp" />


            <View
                android:layout_width="227dp"
                android:layout_height="1dp"
                android:layout_marginTop="9dp"
                android:background="@color/login_text_hint" />


            <Button
                android:id="@+id/btn_forget"
                android:layout_width="85dp"
                android:layout_height="32dp"
                android:layout_marginTop="15dp"
                android:background="@drawable/login_avoid_shap"
                android:text="忘记密码？"
                android:textColor="@drawable/login_text_avoid_selector"
                android:textSize="12sp" />


            <Button
                android:id="@+id/btn_login"
                android:layout_width="227dp"
                android:layout_height="47dp"
                android:layout_marginTop="30dp"
                android:background="@drawable/login_btn_def_shape"
                android:enabled="false"
                android:text="立即绑定"
                android:textColor="@color/login_text_hint"
                android:textSize="15sp" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>
