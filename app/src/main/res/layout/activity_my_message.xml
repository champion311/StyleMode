<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/white"
              android:orientation="vertical">
    <!--标题-->
    <include layout="@layout/activity_base"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/space_line"
        android:background="@color/line"/>

    <android.support.design.widget.TabLayout
        android:id="@+id/tlayout_msg"
        android:layout_width="match_parent"
        android:layout_height="53dp"
        android:background="@color/title_top"
        app:tabGravity="fill"
        app:tabIndicatorColor="@color/green_text_color"
        app:tabIndicatorHeight="2dp"
        app:tabMode="fixed"
        app:tabSelectedTextColor="@color/tab_text_selected"
        app:tabTextAppearance="@style/MyMessageTabTextAppearance"
        app:tabTextColor="@color/tab_text_unselected"
        />

    <android.support.v4.view.ViewPager
        android:id="@+id/viewPager_msg"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>

</LinearLayout>
