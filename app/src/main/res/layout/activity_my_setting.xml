<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg"
    android:clipToPadding="false"
    android:fitsSystemWindows="true"
    android:orientation="vertical">
    <!--标题-->
    <include layout="@layout/activity_base" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/space_line"
        android:background="@color/line" />

    <!--模块一-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:background="@drawable/item_my_setting_shap"
        android:orientation="vertical"
        android:padding="@dimen/space_line">

        <RelativeLayout
            android:id="@+id/rl_about_wo"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/item_about_top_selector">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="20dp"
                android:gravity="center_vertical"
                android:text="关于我们"
                android:textColor="@color/item_text_sel"
                android:textSize="14sp" />

            <ImageView
                android:id="@+id/iv_email_go"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="20dp"
                android:src="@drawable/right_back" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/space_line"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:background="@color/line" />

        <RelativeLayout
            android:id="@+id/rl_go_grade"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/item_about_top_selector">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="20dp"
                android:gravity="center_vertical"
                android:text="去评分"
                android:textColor="@color/item_text_sel"
                android:textSize="14sp" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="20dp"
                android:src="@drawable/right_back" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/space_line"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:background="@color/line" />


        <RelativeLayout
            android:id="@+id/rl_clean_memory"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/item_about_selector">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="20dp"
                android:gravity="center_vertical"
                android:text="清除缓存"
                android:textColor="@color/item_text_sel"
                android:textSize="14sp" />

            <ImageView
                android:id="@+id/iv_clean_right"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="20dp"
                android:src="@drawable/right_back" />

            <TextView
                android:id="@+id/tv_size"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginRight="15dp"
                android:layout_toLeftOf="@id/iv_clean_right"
                android:text="0.00M"
                android:textColor="@color/item_text"
                android:textSize="14sp" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/space_line"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:background="@color/line" />

        <RelativeLayout
            android:id="@+id/rl_last_version"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/item_about_bottom_selector">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="20dp"
                android:gravity="center_vertical"
                android:text="获取最新版本"
                android:textColor="@color/item_text_sel"
                android:textSize="14sp" />


            <ImageView
                android:id="@+id/iv_version_right"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="20dp"
                android:src="@drawable/right_back" />

            <TextView
                android:id="@+id/tv_version"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginRight="15dp"
                android:layout_toLeftOf="@id/iv_version_right"
                android:text="v1.00"
                android:textColor="@color/item_text"
                android:textSize="14sp" />

        </RelativeLayout>

    </LinearLayout>

    <Button
        android:id="@+id/btn_exit"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/item_my_setting_shap"
        android:text="退出登录"
        android:textColor="@color/item_text"
        android:textSize="14sp" />

</LinearLayout>