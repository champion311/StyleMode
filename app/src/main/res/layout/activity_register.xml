<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/login_bg"
    android:orientation="vertical">
    <!--标题-->
    <include layout="@layout/activity_base_login" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <EditText
                android:id="@+id/et_mobile"
                android:layout_width="227dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="51dp"
                android:background="@null"
                android:gravity="center"
                android:hint="请输入您的手机号"
                android:inputType="number"
                android:text=""
                android:textColor="@color/title_text_login"
                android:textColorHint="@color/login_text_hint"
                android:textSize="15sp" />

            <View
                android:layout_width="227dp"
                android:layout_height="1dp"
                android:layout_marginTop="9dp"
                android:background="@color/login_text_hint" />

            <EditText
                android:id="@+id/et_password"
                android:layout_width="227dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp"
                android:background="@null"
                android:gravity="center"
                android:hint="请输入您的密码"
                android:inputType="numberPassword"
                android:textColor="@color/title_text_login"
                android:textColorHint="@color/login_text_hint"
                android:textSize="15sp" />


            <View
                android:layout_width="227dp"
                android:layout_height="1dp"
                android:layout_marginTop="9dp"
                android:background="@color/login_text_hint" />

            <EditText
                android:id="@+id/et_code"
                android:layout_width="227dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp"
                android:background="@null"
                android:gravity="center"
                android:hint="输入验证码"
                android:inputType="number"
                android:maxLength="6"
                android:textColor="@color/title_text_login"
                android:textColorHint="#30ffffff"
                android:textSize="15sp" />


            <View
                android:layout_width="227dp"
                android:layout_height="1dp"
                android:layout_marginTop="9dp"
                android:background="@color/login_text_hint" />


            <Button
                android:id="@+id/btn_get_code"
                android:layout_width="85dp"
                android:layout_height="32dp"
                android:layout_marginTop="15dp"
                android:background="@drawable/login_avoid_shap"
                android:text="获取验证码"
                android:textColor="@drawable/login_text_avoid_selector"
                android:textSize="12sp" />

            <Button
                android:id="@+id/btn_register"
                android:layout_width="227dp"
                android:layout_height="48dp"
                android:layout_marginTop="30dp"
                android:background="@drawable/login_btn_def_shape"
                android:enabled="false"
                android:text="注册"
                android:textColor="@color/login_text_hint"
                android:textSize="15sp" />


            <!--协议-->
            <LinearLayout
                android:id="@+id/ll_protocol"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                android:layout_marginTop="20dp"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:padding="10dp">

                <RadioButton
                    android:id="@+id/rb_agreement"
                    android:layout_width="14dp"
                    android:layout_height="14dp"
                    android:background="@drawable/register_select_selector"
                    android:button="@null"
                    android:checked="true"
                    android:gravity="center" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:text="我已阅协议内容"
                    android:textColor="@color/white"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/tv_user_agreement"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="《用户隐私协议》"
                    android:textColor="#2BA098"
                    android:textSize="12sp" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
