<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/login_bg"
    android:gravity="center_horizontal"
    android:orientation="vertical">
    <!--标题-->
    <include layout="@layout/activity_base_login" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="50dp"
        android:text="验证您的手机号并完善账号"
        android:textColor="@color/white"
        android:textSize="19sp" />


    <TextView
        android:id="@+id/tv_mobile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="15dp"
        android:text="13312345678"
        android:textColor="@color/c999"
        android:textSize="14sp" />


    <EditText
        android:id="@+id/et_code"
        android:layout_width="227dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:background="@null"
        android:gravity="center"
        android:hint="短信验证码"
        android:inputType="number"
        android:maxLength="6"
        android:textColor="@color/title_text_login"
        android:textColorHint="@color/login_text_hint"
        android:textSize="15sp" />


    <View
        android:layout_width="227dp"
        android:layout_height="1dp"
        android:layout_marginTop="9dp"
        android:background="@color/login_text_hint" />


    <Button
        android:id="@+id/btn_get_code"
        android:layout_width="wrap_content"
        android:layout_height="32dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/login_avoid_shap"
        android:padding="5dp"
        android:text="获取验证码"
        android:textColor="@drawable/login_text_avoid_selector"
        android:textSize="12sp" />

    <EditText
        android:id="@+id/et_password"
        android:layout_width="227dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:background="@null"
        android:gravity="center"
        android:hint="密码（大于8位的字母和数字）"
        android:inputType="numberPassword"
        android:textColor="@color/title_text_login"
        android:textColorHint="@color/login_text_hint"
        android:textSize="15dp" />

    <View
        android:layout_width="227dp"
        android:layout_height="1dp"
        android:layout_marginTop="9dp"
        android:background="@color/login_text_hint" />


    <Button
        android:id="@+id/btn_submit"
        android:layout_width="227dp"
        android:layout_height="48dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/login_btn_def_shape"
        android:enabled="false"
        android:text="确认"
        android:textColor="@color/login_text_hint"
        android:textSize="15sp" />
</LinearLayout>
