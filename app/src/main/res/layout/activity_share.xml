<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/share_bg"
    android:gravity="center_vertical"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="40dp"
        android:paddingRight="40dp">

        <TextView
            android:id="@+id/tv_friend"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dip"
            android:layout_weight="1"
            android:drawablePadding="15dp"
            android:drawableTop="@drawable/share_friend"
            android:gravity="center"
            android:text="朋友圈"
            android:textColor="@color/white"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/tv_weixin"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dip"
            android:layout_weight="1"
            android:drawablePadding="15dp"
            android:drawableTop="@drawable/share_weixin"
            android:gravity="center"
            android:text="微信"
            android:textColor="@color/white"
            android:textSize="13sp" />


        <TextView
            android:id="@+id/tv_qq"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dip"
            android:layout_weight="1"
            android:drawablePadding="15dp"
            android:drawableTop="@drawable/share_qq"
            android:gravity="center"
            android:text="QQ"
            android:textColor="@color/white"
            android:textSize="13sp" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="48dp"
        android:orientation="horizontal"
        android:paddingLeft="40dp"
        android:paddingRight="40dp">

        <TextView
            android:id="@+id/tv_zone"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dip"
            android:layout_weight="1"
            android:drawablePadding="15dp"
            android:drawableTop="@drawable/share_zone"
            android:gravity="center"
            android:text="空间"
            android:textColor="@color/white"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/tv_weibo"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dip"
            android:layout_weight="1"
            android:drawablePadding="15dp"
            android:drawableTop="@drawable/share_weibo"
            android:gravity="center"
            android:text="微博"
            android:textColor="@color/white"
            android:textSize="13sp" />


        <TextView
            android:id="@+id/tv_copy"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dip"
            android:layout_weight="1"
            android:drawablePadding="15dp"
            android:drawableTop="@drawable/share_copy"
            android:gravity="center"
            android:text="复制链接"
            android:textColor="@color/white"
            android:textSize="13sp" />


    </LinearLayout>

    <ImageView
        android:id="@+id/iv_close"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="75dp"
        android:src="@drawable/share_close" />
</LinearLayout>
