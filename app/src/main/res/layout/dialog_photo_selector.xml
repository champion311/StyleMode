<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="@color/bg"
              android:orientation="vertical">

    <TextView
        android:id="@+id/tv_cancel"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/theme_color_primary_card_view_bg"
        android:gravity="center"
        android:text="取消"
        android:textColor="@color/c999"
        android:textSize="14sp"/>

    <TextView
        android:id="@+id/tv_take_photo"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@color/cf6"
        android:gravity="center"
        android:text="拍照"
        android:textColor="@color/green_text_color"
        android:textSize="17sp"

        />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/space_line"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="@color/dark_line"/>

    <TextView
        android:id="@+id/tv_take_album"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@color/cf6"
        android:gravity="center"
        android:text="从相册选择"
        android:textColor="@color/c999"
        android:textSize="15sp"
        />
</LinearLayout>