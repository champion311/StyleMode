<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/mParentView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/reply_bg_color"
                android:paddingBottom="15dp"
                android:paddingTop="10dp"


    >

    <!--          android:paddingBottom="11dp"
                android:paddingLeft="11dp"
                android:paddingRight="5dp"
                android:paddingTop="10dp"-->

    <shinerich.com.stylemodel.widget.CircleImageView
        android:id="@+id/reply_head"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/default_comment_head"
        />

    <TextView
        android:id="@+id/mName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="11dp"
        android:layout_toRightOf="@id/reply_head"
        android:text="复式鸿运"
        android:textColor="@color/green_text_color"
        android:textSize="11dp"
        />

    <TextView
        android:id="@id/submit_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="7dp"
        android:layout_toRightOf="@id/mName"
        android:text="昨天 18:20"
        android:textColor="@color/common_text_color"
        android:textSize="11sp"
        />

    <TextView
        android:id="@+id/mContent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/mName"
        android:layout_alignParentBottom="true"
        android:layout_below="@id/mName"
        android:layout_marginTop="6dp"
        android:text="这个世界太乱"
        android:textColor="@color/common_text_color"
        android:textSize="11sp"

        />

</RelativeLayout>