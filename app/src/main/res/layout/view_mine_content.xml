<?xml version="1.0" encoding="utf-8"?>
<com.bilibili.magicasakura.widgets.TintLinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/theme_color_primary_common_background"
    android:orientation="vertical"


    >

    <com.bilibili.magicasakura.widgets.TintView
        android:layout_width="match_parent"
        android:layout_height="@dimen/space_line"
        android:background="@color/dark_line"/>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="60dp"
        android:background="@color/white"
        android:orientation="horizontal">

        <com.bilibili.magicasakura.widgets.TintRelativeLayout
            android:id="@+id/rl_msg"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/item_mine_top"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_msg"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:src="@drawable/mine_msg"/>

            <com.bilibili.magicasakura.widgets.TintTextView
                android:id="@+id/tv_msg"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="16sp"
                android:layout_toRightOf="@id/iv_msg"
                android:gravity="center_vertical"
                android:text="我的消息"
                android:textColor="@color/item_text"
                android:textSize="14sp"/>

            <ImageView
                android:id="@+id/iv_dot"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="15dp"
                android:layout_toRightOf="@id/tv_msg"
                android:src="@drawable/mine_dot"
                android:visibility="gone"/>
        </com.bilibili.magicasakura.widgets.TintRelativeLayout>

        <com.bilibili.magicasakura.widgets.TintView
            android:id="@+id/fengexian"
            android:layout_width="0.5dp"
            android:layout_height="match_parent"
            android:background="@color/dark_line"/>

        <com.bilibili.magicasakura.widgets.TintRelativeLayout
            android:id="@+id/rl_collect"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/item_mine_top"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_collect"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:src="@drawable/mine_collect"/>


            <com.bilibili.magicasakura.widgets.TintTextView
                android:id="@+id/tv_collect"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="15dp"
                android:layout_toRightOf="@id/iv_collect"
                android:gravity="center_vertical"
                android:text="我的收藏"
                android:textColor="@color/item_text"
                android:textSize="12sp"/>
        </com.bilibili.magicasakura.widgets.TintRelativeLayout>
    </LinearLayout>

    <com.bilibili.magicasakura.widgets.TintView
        android:layout_width="match_parent"
        android:layout_height="@dimen/space_line"
        android:background="@color/dark_line"/>


    <!-- 建议-->
    <com.bilibili.magicasakura.widgets.TintRelativeLayout
        android:id="@+id/rl_suggest"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/item_about_selector">

        <ImageView
            android:id="@+id/iv_suggest"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="25dp"
            android:src="@drawable/mine_suggest"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="16dp"
            android:layout_toRightOf="@id/iv_suggest"
            android:gravity="center_vertical"
            android:text="给点建议吧"
            android:textColor="@color/item_text"
            android:textSize="14sp"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="25dp"
            android:src="@drawable/right_back"/>
    </com.bilibili.magicasakura.widgets.TintRelativeLayout>


    <com.bilibili.magicasakura.widgets.TintView
        android:layout_width="match_parent"
        android:layout_height="@dimen/space_line"
        android:background="@color/dark_line"/>


    <!-- 账号设置-->
    <com.bilibili.magicasakura.widgets.TintRelativeLayout
        android:id="@+id/rl_account"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/item_about_selector">

        <ImageView
            android:id="@+id/iv_account"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="25dp"
            android:src="@drawable/mine_account"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="16dp"
            android:layout_toRightOf="@id/iv_account"
            android:gravity="center_vertical"
            android:text="账号设置"
            android:textColor="@color/item_text"
            android:textSize="14sp"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="25dp"
            android:src="@drawable/right_back"/>
    </com.bilibili.magicasakura.widgets.TintRelativeLayout>


    <com.bilibili.magicasakura.widgets.TintView
        android:id="@+id/v_account"
        android:layout_width="match_parent"
        android:layout_height="@dimen/space_line"
        android:background="@color/dark_line"/>


    <!-- 夜间模式-->
    <com.bilibili.magicasakura.widgets.TintRelativeLayout
        android:id="@+id/rl_model"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/item_about_selector">

        <ImageView
            android:id="@+id/iv_model"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="25dp"
            android:src="@drawable/mine_model"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="16dp"
            android:layout_toRightOf="@id/iv_model"
            android:gravity="center_vertical"
            android:text="夜间模式"
            android:textColor="@color/item_text"
            android:textSize="14sp"/>

        <ImageView
            android:id="@+id/iv_skin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="25dp"
            android:src="@drawable/mine_btn_switch_selector"/>
    </com.bilibili.magicasakura.widgets.TintRelativeLayout>


    <com.bilibili.magicasakura.widgets.TintView
        android:layout_width="match_parent"
        android:layout_height="@dimen/space_line"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:background="@color/dark_line"/>
    <!-- 设置-->
    <com.bilibili.magicasakura.widgets.TintRelativeLayout
        android:id="@+id/rl_setting"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/item_about_selector">

        <ImageView
            android:id="@+id/iv_setting"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="25dp"
            android:src="@drawable/mine_setting"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="16dp"
            android:layout_toRightOf="@id/iv_setting"
            android:gravity="center_vertical"
            android:text="设置"
            android:textColor="@color/item_text"
            android:textSize="14sp"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="25dp"
            android:src="@drawable/right_back"/>
    </com.bilibili.magicasakura.widgets.TintRelativeLayout>

    <com.bilibili.magicasakura.widgets.TintRelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/space_line"
        android:layout_marginBottom="137dp"
        android:background="@color/dark_line"/>
</com.bilibili.magicasakura.widgets.TintLinearLayout>